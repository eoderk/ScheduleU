<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TermDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/component_widget_term"
            android:id="@+id/widgetTermDetailsView" />

        <Spinner
            android:id="@+id/termStatusSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"  />

        <include
            layout="@layout/component_note_field"
            android:id="@+id/termDetailNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/component_list_with_fab_widget"
            android:id="@+id/termCourseListView" />

    </LinearLayout>

</ScrollView>