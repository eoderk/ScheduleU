<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AssessmentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            layout="@layout/component_widget_assessment" />

        <include
            layout="@layout/component_base_switch"
            android:id="@+id/useDateRangeSwitch" />

        <Spinner
            android:id="@+id/assessmentStatusSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:minHeight="48dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <include
            layout="@layout/component_note_field"
            android:id="@+id/assessmentDetailNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>