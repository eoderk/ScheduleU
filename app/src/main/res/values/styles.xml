<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.ScheduleU.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.ScheduleU.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextView" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/component_text_view_min_height</item>
        <item name="android:textSize">@dimen/component_text_size</item>
        <item name="android:padding">@dimen/component_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewLabel" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/component_text_view_min_height</item>
        <item name="android:textSize">@dimen/component_text_size</item>
        <item name="android:padding">@dimen/component_padding</item>
        <item name="android:background">@color/text_view_background</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditTex" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/component_edit_text_min_height</item>
        <item name="android:textSize">@dimen/component_text_size</item>
        <item name="android:padding">@dimen/component_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/no_hint_set</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="TextViewCol1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/light_blue_50</item>
        <item name="android:padding">@dimen/component_two_col_padding</item>
        <item name="android:hint">@string/no_hint_set</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewCol2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/light_blue_50</item>
        <item name="android:padding">@dimen/component_two_col_padding</item>
        <item name="android:hint">@string/no_hint_set</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>